<div class="form-container">
  <form action="/edit/{{rstList.id}}?_method=PUT" method="post">
    <label for="fname">中文名稱：</label>
    <input type="text" name="name" value={{rstList.name}}><br>
    <label for="lname">英文名稱：</label>
    <input type="text" name="name_en" value={{rstList.name_en}}><br>
    <label for="lname">餐廳類型：</label>
    <select name="category">
      <option value="日本料理" {{#if (eq rstList.category "日本料理")}}selected{{/if}}>日本料理</option>
      <option value="中東料理" {{#if (eq rstList.category "中東料理")}}selected{{/if}}>中東料理</option>
      <option value="美式" {{#if (eq rstList.category "美式")}}selected{{/if}}>美式</option>
      <option value="酒吧" {{#if (eq rstList.category "酒吧")}}selected{{/if}}>酒吧</option>
      <option value="義式餐廳" {{#if (eq rstList.category "酒吧")}}selected{{/if}}>義式餐廳</option>
      <option value="咖啡" {{#if (eq rstList.category "咖啡")}}selected{{/if}}>咖啡</option>
    </select><br>
    <label for="lname">圖片網址：</label>
    <input type="text" name="image" value={{rstList.image}}><br>
    <label for="lname">餐廳地址：</label>
    <input type="text" name="location" value={{rstList.location}}><br>
    <label for="lname">餐廳電話：</label>
    <input type="text" name="phone" value={{rstList.phone}}><br>
    <label for="lname">Google Map：</label>
    <input type="text" name="google_map" value={{rstList.google_map}}><br>
    <label for="lname">餐廳評價：</label>
    <input type="number" name="rating" value={{rstList.rating}}><br>
    <label for="lname">餐廳說明：</label>
    <input type="text" name="description" value={{rstList.description}}>
    <br>
    <button type="submit" id="modifyBtn">修改</button>
  </form>
</div>